<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.hrm.mapper.WishMapper">

    <resultMap id="BaseResultMap" type="com.rabbiter.hrm.entity.UserWish">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_name" property="productName"/>
        <result column="brand" property="brand"/>
        <result column="category" property="category"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, product_name, brand, category, remark, create_time
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_wish
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_wish
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_wish (user_id, product_name, brand, category, remark, create_time)
        VALUES (#{userId}, #{productName}, #{brand}, #{category}, #{remark}, NOW())
    </insert>

    <update id="updateById">
        UPDATE user_wish
        <set>
            <if test="productName != null">product_name = #{productName},</if>
            <if test="brand != null">brand = #{brand},</if>
            <if test="category != null">category = #{category},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user_wish WHERE id = #{id}
    </delete>

    <select id="countByUserId" resultType="int">
        SELECT COUNT(*) FROM user_wish WHERE user_id = #{userId}
    </select>

</mapper>
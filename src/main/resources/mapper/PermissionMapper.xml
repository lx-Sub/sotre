<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.hrm.mapper.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.rabbiter.hrm.entity.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="parent_code" property="parentCode"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, code, type, parent_code, path, component, icon, sort, status, create_time
    </sql>

    <!-- 查询所有权限 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM permission
        WHERE status = 1
        ORDER BY sort ASC, id ASC
    </select>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM permission
        WHERE id = #{id}
    </select>

    <!-- 根据代码查询 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM permission
        WHERE code = #{code}
    </select>

    <!-- 根据管理员ID查询权限 -->
    <select id="selectByAdminId" resultMap="BaseResultMap">
        SELECT p.*
        FROM permission p
        INNER JOIN admin_permission ap ON p.id = ap.permission_id
        WHERE ap.admin_id = #{adminId}
        ORDER BY p.sort ASC, p.id ASC
    </select>

    <!-- 插入权限 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO permission (
            name, code, type, parent_code, path, component, icon, sort, status, create_time
        ) VALUES (
            #{name}, #{code}, #{type}, #{parentCode}, #{path}, #{component},
            #{icon}, #{sort}, #{status}, NOW()
        )
    </insert>

    <!-- 更新权限 -->
    <update id="updateById">
        UPDATE permission
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="parentCode != null">parent_code = #{parentCode},</if>
            <if test="path != null">path = #{path},</if>
            <if test="component != null">component = #{component},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除权限 -->
    <delete id="deleteById">
        DELETE FROM permission WHERE id = #{id}
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteByIds">
        DELETE FROM permission WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
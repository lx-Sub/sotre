<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.hrm.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="com.rabbiter.hrm.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, description, sort, status, create_time, update_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM category
        WHERE id = #{id}
    </select>

    <!-- 根据名称查询 -->
    <select id="selectByName" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM category
        WHERE name = #{name}
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM category
        ORDER BY sort ASC, id ASC
    </select>

    <!-- 查询启用的分类 -->
    <select id="selectEnabled" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM category
        WHERE status = 1
        ORDER BY sort ASC, id ASC
    </select>

    <!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (name, description, sort, status, create_time)
        VALUES (#{name}, #{description}, #{sort}, #{status}, NOW())
    </insert>

    <!-- 更新 -->
    <update id="updateById">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 更新状态 -->
    <update id="updateStatus">
        UPDATE category
        SET status = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById">
        DELETE FROM category WHERE id = #{id}
    </delete>

    <!-- 统计分类下的帖子数 -->
    <select id="countPosts" resultType="int">
        SELECT COUNT(*)
        FROM post
        WHERE category = (SELECT name FROM category WHERE id = #{id})
    </select>

    <!-- 检查分类名称是否存在 -->
    <select id="checkNameExists" resultType="int">
        SELECT COUNT(*) FROM category
        WHERE name = #{name}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

</mapper>
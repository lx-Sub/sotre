<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.hrm.mapper.ProductSpecMapper">

    <resultMap id="BaseResultMap" type="com.rabbiter.hrm.entity.ProductSpec">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="spec_name" property="specName"/>
        <result column="spec_value" property="specValue"/>
        <result column="stock" property="stock"/>
        <result column="price" property="price"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, product_id, spec_name, spec_value, stock, price
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM product_spec
        WHERE id = #{id}
    </select>

    <select id="selectByProductId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM product_spec
        WHERE product_id = #{productId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product_spec (product_id, spec_name, spec_value, stock, price)
        VALUES (#{productId}, #{specName}, #{specValue}, #{stock}, #{price})
    </insert>

    <insert id="batchInsert">
        INSERT INTO product_spec (product_id, spec_name, spec_value, stock, price)
        VALUES
        <foreach collection="list" item="spec" separator=",">
            (#{spec.productId}, #{spec.specName}, #{spec.specValue}, #{spec.stock}, #{spec.price})
        </foreach>
    </insert>

    <update id="updateById">
        UPDATE product_spec
        <set>
            <if test="specName != null">spec_name = #{specName},</if>
            <if test="specValue != null">spec_value = #{specValue},</if>
            <if test="stock != null">stock = #{stock},</if>
            <if test="price != null">price = #{price},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteByProductId">
        DELETE FROM product_spec WHERE product_id = #{productId}
    </delete>

    <delete id="deleteById">
        DELETE FROM product_spec WHERE id = #{id}
    </delete>

</mapper>
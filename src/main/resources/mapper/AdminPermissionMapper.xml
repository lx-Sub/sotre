<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.hrm.mapper.AdminPermissionMapper">

    <resultMap id="BaseResultMap" type="com.rabbiter.hrm.entity.AdminPermission">
        <id column="id" property="id"/>
        <result column="admin_id" property="adminId"/>
        <result column="permission_id" property="permissionId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, admin_id, permission_id, create_time
    </sql>

    <!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO admin_permission (admin_id, permission_id, create_time)
        VALUES (#{adminId}, #{permissionId}, NOW())
    </insert>

    <!-- 根据管理员ID删除 -->
    <delete id="deleteByAdminId">
        DELETE FROM admin_permission WHERE admin_id = #{adminId}
    </delete>

    <!-- 根据管理员ID查询权限代码 -->
    <select id="selectPermissionsByAdminId" resultType="string">
        SELECT p.code
        FROM permission p
        INNER JOIN admin_permission ap ON p.id = ap.permission_id
        WHERE ap.admin_id = #{adminId}
        ORDER BY p.sort ASC
    </select>

    <!-- 根据权限ID删除 -->
    <delete id="deleteByPermissionId">
        DELETE FROM admin_permission WHERE permission_id = #{permissionId}
    </delete>

</mapper>
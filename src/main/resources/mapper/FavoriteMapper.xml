<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.hrm.mapper.FavoriteMapper">

    <resultMap id="BaseResultMap" type="com.rabbiter.hrm.entity.UserFavorite">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="type" property="type"/>
        <result column="target_id" property="targetId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, type, target_id, create_time
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_favorite
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_favorite
        WHERE user_id = #{userId}
        <if test="type != null">
            AND type = #{type}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="selectByUserAndTarget" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_favorite
        WHERE user_id = #{userId} AND type = #{type} AND target_id = #{targetId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_favorite (user_id, type, target_id, create_time)
        VALUES (#{userId}, #{type}, #{targetId}, NOW())
    </insert>

    <delete id="deleteById">
        DELETE FROM user_favorite WHERE id = #{id}
    </delete>

    <delete id="deleteByUserAndTarget">
        DELETE FROM user_favorite
        WHERE user_id = #{userId} AND type = #{type} AND target_id = #{targetId}
    </delete>

    <select id="countByUserId" resultType="int">
        SELECT COUNT(*) FROM user_favorite
        WHERE user_id = #{userId}
        <if test="type != null">
            AND type = #{type}
        </if>
    </select>

    <select id="countByTarget" resultType="int">
        SELECT COUNT(*) FROM user_favorite
        WHERE type = #{type} AND target_id = #{targetId}
    </select>

</mapper>